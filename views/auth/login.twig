{% extends 'templates/app.twig' %}

{% block content %}
    <div class="row justify-content-center">
        <div class="col-6">
            <form action="{{ route('auth.login') }}" method="post">
                <div class="form-group">
                    <label for="email">Email</label>
                    <input class="form-control {{ errors.email ? 'is-invalid' : '' }}" type="text" name="email" id="email">
                    {% if errors.email %}
                        <div class="invalid-feedback">
                            {{ errors.email | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input class="form-control {{ errors.password ? 'is-invalid' : '' }}" type="text" name="password" id="password">
                    {% if errors.password %}
                        <div class="invalid-feedback">
                            {{ errors.password | first }}
                        </div>
                    {% endif %}
                </div>
                <div class="form-check">
                    <label class="form-check-label" for="remember">
                        <input class="form-check-input" type="checkbox" name="remember" id="remember">
                        Remember Me
                    </label>
                </div>
                <input type="hidden" name="{{ csrf.key }}" value="{{ csrf.token }}">
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>
{% endblock %}